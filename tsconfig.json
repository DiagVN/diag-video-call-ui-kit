{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@diag/video-call-core": ["./packages/core/src"],
      "@diag/video-call-ui-kit": ["./packages/ui-kit/src"],
      "@diag/agora-web-adapter": ["./packages/adapters/agora-web/src"]
    }
  },
  "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.vue", "apps/*/src/**/*.ts", "apps/*/src/**/*.vue"],
  "exclude": ["node_modules", "dist", "**/dist"]
}
