{
  "name": "diag-video-call-ui-kit",
  "version": "1.0.9",
  "private": true,
  "type": "module",
  "description": "DIAG Vue 3 Video Call UI Kit - Agora-ready with Vietnamese/English i18n",
  "author": "DIAG",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter playground dev",
    "build": "pnpm -r --filter './packages/**' build",
    "build:playground": "pnpm --filter playground build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md,css}\"",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json --composite false"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^9.21.1",
    "jsdom": "^24.0.0",
    "pinia": "^3.0.4",
    "prettier": "^3.2.5",
    "typescript": "~5.4.0",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.3.1",
    "vue": "^3.4.0",
    "vue-eslint-parser": "^10.2.0",
    "vue-i18n": "^11.2.8",
    "vue-tsc": "^2.0.6"
  }
}
